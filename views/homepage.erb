<html>
  <head>
    <link id="stylesheet" rel="stylesheet" type="text/css" href="/css/<%=@mode_status%>-mode.css" />
  </head>
  <body>
    <div class="container">
      <h1>Listy</h1>
      <h2>Incomplete</h2>
      <div ><a>
        <%if @incomplete_todos != nil%>
          <%@incomplete_todos.each do |item|%>
            <form action="/mark-completed" method="POST">
              <input type="hidden" name="id" value="<%=item.id%>">
              <input type="submit" name="submit" value="">
            </form>
            <form action="/todo" method="POST">
              <input type="hidden" name="id" value="<%=item.id%>">
              <input type="submit" name="submit" value="<%=item.title%>">
            </form>
            <p><%=item.content%></p>
            <p><%= Date.parse(item.deadline).strftime('%d/%m/%Y') %></p>
          <%end%>
        <%end%>
      </div>
      <a href='/add-todo'>Add todo</a>
      <form action="/logout" method="POST">
        <input type="submit" name="Submit" value="logout">
      </form>
      <form action="/colour-mode" method="POST">
        <input type="submit" name="Submit" value="toggle mode">
      </form>
      <h2>Completed</h2>
      <%if @complete_todos != nil%>
        <%@complete_todos.each do |item|%>
          <h3><%=item.title%></h3>
          <p><%=item.content%></p>
        <%end%>
      <%end%>
    </div>
  </body>
</html>